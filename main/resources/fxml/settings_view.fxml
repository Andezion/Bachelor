<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="15" xmlns:fx="http://javafx.com/fxml"
      fx:controller="controller.SettingsController">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Настройки проекта" style="-fx-font-size: 16px;"/>

    <HBox spacing="10">
        <Label text="Стоимость рабочих:"/>
        <TextField fx:id="workerCostField" promptText="в гривнах"/>
    </HBox>

    <HBox spacing="10">
        <Label text="Стоимость оборудования:"/>
        <TextField fx:id="equipmentCostField" promptText="в гривнах"/>
    </HBox>

    <HBox spacing="10">
        <Label text="Срок окупаемости (лет):"/>
        <TextField fx:id="paybackPeriodField" promptText="например, 5"/>
    </HBox>

    <HBox spacing="10">
        <Label text="Эффективность панелей (%):"/>
        <TextField fx:id="solarEfficiencyField" promptText="например, 18"/>
    </HBox>

    <HBox spacing="10">
        <Label text="Угол наклона панели (°):"/>
        <TextField fx:id="tiltAngleField" promptText="например, 30"/>
    </HBox>

    <HBox spacing="10">
        <Label text="Ориентация панели (азимут, °):"/>
        <TextField fx:id="azimuthField" promptText="180 = юг"/>
    </HBox>

    <HBox spacing="10">
        <Label text="Стоимость установки (грн/кВт):"/>
        <TextField fx:id="solarInstallationCostField" promptText="например, 80000"/>
    </HBox>

    <HBox spacing="10">
        <Label text="Тариф на электроэнергию (грн/кВт·ч):"/>
        <TextField fx:id="electricityTariffField" promptText="например, 5.5"/>
    </HBox>

    <HBox spacing="10">
        <Label text="Целевая окупаемость (мес):"/>
        <TextField fx:id="targetPaybackField" promptText="например, 60"/>
    </HBox>

    <Button text="Сохранить" onAction="#onSave"/>
    <Label fx:id="statusLabel"/>
</VBox>
